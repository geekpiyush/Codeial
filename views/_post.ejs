        <input type="submit" value="Comment">
     </form>
     <%}%>
     <div class="comment-list">
        <ul id="post-comment-<%=post._id%>">
            <%for(comment of post.comments){%>
               
                <%-include('_comment')-%>
         <%}%>
        </ul>
     </div>
