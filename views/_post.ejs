<li>
    <p>
        
        <%= post.content%>
    <br>
    <small>
        <i class="fa-solid fa-user fa-lg"></i>
     <%=post.user.name%>
     <!-- <%=post.user.email%>
     <%=post.user.password%> -->
    </small>
    <%if(locals.user && locals.user.id == post.user.id){%>
        <a href="/post/destroy/<%=post.id %>">remove</a>
